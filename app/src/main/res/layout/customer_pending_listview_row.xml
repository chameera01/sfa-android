<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/customer_pending_lv_name"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/customer_pending_lv_address"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/customer_pending_lv_contact"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/customer_pending_lv_uploadstatus"
        android:textSize="18sp"
        android:textAlignment="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/customer_pending_lv_approvalstatus"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

</LinearLayout>