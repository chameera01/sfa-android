<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow

            android:backgroundTint="@color/secondoryText"
            android:textColor="@color/textPrimary"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="Invoice No."
                android:layout_weight="2"
                android:id="@+id/tvInvNo"
                android:textAlignment="center"
                style="@style/SalesRowTextView" />

            <TextView
                android:text="Credit Amount"
                android:layout_weight="3"
                android:id="@+id/tvCrdtAmt"
                android:textAlignment="center"
                style="@style/SalesRowTextView" />

            <TextView
                android:text="Cash"
                android:layout_weight="2"
                android:id="@+id/tvCashAmt"
                android:textAlignment="center"
                style="@style/SalesRowTextView" />

            <TextView
                android:text="Cheque"
                android:layout_weight="2"
                android:id="@+id/tvChequeAmt"
                android:textAlignment="center"
                style="@style/SalesRowTextView" />

            <TextView
                android:text="Credit Balance"
                android:layout_weight="3"
                android:id="@+id/tvCrdtBalance"
                android:textAlignment="center"
                style="@style/SalesRowTextView" />

            <TextView
                android:text="Remaining"
                android:layout_weight="3"
                android:id="@+id/tvRemaining"
                android:textAlignment="center"
                style="@style/SalesRowTextView" />

        </TableRow>
    </TableLayout>

</LinearLayout>