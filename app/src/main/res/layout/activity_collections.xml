<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTop"

    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <!--route and rep spinners w2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Route"
                            android:gravity="start"
                            android:id="@+id/tvRoute"
                            android:paddingTop="0dp"
                            android:textSize="18sp"
                            android:layout_weight="1" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:id="@+id/routeSpinner"
                            android:spinnerMode="dropdown"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_weight="2"></Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Rep."
                            android:gravity="left"
                            android:id="@+id/tvRep"
                            android:paddingTop="0dp"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:paddingStart="5dp" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:id="@+id/repSpinner"
                            android:spinnerMode="dropdown"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_weight="2"></Spinner>
                    </LinearLayout>


                </LinearLayout>

                <!--customer and type spinners-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Customer"
                            android:gravity="start"
                            android:id="@+id/tvCustomer"
                            android:paddingTop="0dp"
                            android:textSize="18sp"
                            android:layout_weight="1" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:id="@+id/customerSpinner"
                            android:spinnerMode="dropdown"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_weight="2"></Spinner>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:gravity="left"
                            android:id="@+id/tvType"
                            android:paddingTop="0dp"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:paddingLeft="5dp" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:id="@+id/typeSpinner"
                            android:spinnerMode="dropdown"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_weight="2"></Spinner>
                    </LinearLayout>

                </LinearLayout>

                <!--invoice no spinner and credit textview-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Invoice No."
                            android:gravity="left"
                            android:id="@+id/tvInvoiceNo"
                            android:paddingTop="0dp"
                            android:textSize="18sp"
                            android:layout_weight="1" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:id="@+id/invoiceSpinner"
                            android:spinnerMode="dropdown"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_weight="2"></Spinner>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingTop="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Credit Amount"
                            android:gravity="left"
                            android:id="@+id/tvCreditAmt"
                            android:paddingTop="0dp"
                            android:textSize="18sp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:id="@+id/creditAmt"
                            android:layout_weight="2"
                            android:textSize="18sp"
                            android:text="Credit Amount"></TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="40">

                    <ViewFlipper
                        android:id="@+id/flipper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <!--Cash Collections Layout-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvCashAmt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Cash Amount"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etCash"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:inputType="numberDecimal"
                                    android:singleLine="true" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="0.5">

                                </View>

                                <Button
                                    android:id="@+id/btnAddCash"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Add"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:textSize="18sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!--Cheque Collections Layout-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvChequeNo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Cheque No."
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etChequeNo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />

                                <TextView
                                    android:id="@+id/tvChqAmount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Amount"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etChqAmount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:inputType="numberDecimal"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvBank"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Bank"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etBank"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />

                                <TextView
                                    android:id="@+id/tvBranch"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Branch"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etBranch"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvRealizeDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Realize Date"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etRealizeDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="2">

                                </View>

                                <Button
                                    android:id="@+id/btnAddCheque"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Add"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:textSize="18sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <!--Cash + Cheque Collections Layout-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvCashInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Cash Amount"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etCashInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:inputType="numberDecimal"
                                    android:singleLine="true" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvChequeNoInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Cheque No."
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etChequeNoInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />

                                <TextView
                                    android:id="@+id/tvChqAmountInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Amount"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etChqAmountInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:inputType="numberDecimal"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvBankInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Bank"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etBankInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />

                                <TextView
                                    android:id="@+id/tvBranchInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Branch"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etBranchInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvRealizeDateInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:paddingTop="0dp"
                                    android:text="Realize Date"
                                    android:textSize="19sp" />

                                <EditText
                                    android:id="@+id/etRealizeDateInBoth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:singleLine="true" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="2">

                                </View>

                                <Button
                                    android:id="@+id/btnAddCash_Cheque"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Add"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </ViewFlipper>

                    <TableLayout
                        android:id="@+id/table_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <TableRow
                            android:background="@drawable/backshadow"
                            android:backgroundTint="@color/secondoryText"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/textPrimary">

                            <TextView
                                android:id="@+id/tvInvNo"
                                style="@style/SalesRowTextView"
                                android:layout_weight="2"
                                android:text="Invoice No."
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/tvCrdtAmt"
                                style="@style/SalesRowTextView"
                                android:layout_weight="3"
                                android:text="Credit Amount"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/tvCashAmount"
                                style="@style/SalesRowTextView"
                                android:layout_weight="2"
                                android:text="Cash"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/tvChequeAmt"
                                style="@style/SalesRowTextView"
                                android:layout_weight="2"
                                android:text="Cheque"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/tvCrdtBalance"
                                style="@style/SalesRowTextView"
                                android:layout_weight="3"
                                android:text="Credit Balance"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/tvRemaining"
                                style="@style/SalesRowTextView"
                                android:layout_weight="3"
                                android:text="Remaining"
                                android:textAlignment="center" />

                        </TableRow>
                    </TableLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvCollections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
