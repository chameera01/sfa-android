<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:openDrawer="start">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_alignParentTop="true"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/principleSpinner"
                    style="@style/SalesSpinnerViews">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/subBrandSpinner"
                    style="@style/SalesSpinnerViews">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <android.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.widget.SearchView>
            </LinearLayout>
        </LinearLayout>
    <!--table header-->
        <TableLayout
            android:id="@+id/table_header"
            android:layout_below="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/listSelectedText"
            >
            <TableRow android:background="@drawable/backshadow"
                android:backgroundTint="@color/secondoryText"
                android:textColor="@color/textPrimary"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:text="Code"

                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Product"

                    android:layout_weight="4"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Batch Number"

                    android:layout_weight="2"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Expiry Date"
                    android:visibility="gone"
                    android:layout_weight="1.5"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Unit Price"

                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Stock"

                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Shelf"

                    android:inputType="number"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Request"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Order"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Free"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Disc%"

                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
                <TextView android:text="Line Value"

                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/SalesTableHeaderTextViews"/>
            </TableRow>
        </TableLayout>

        <!--details-->

    <android.support.v7.widget.RecyclerView

        android:id="@+id/invoiceRecycler"
        android:paddingTop="10dp"
        android:layout_below="@+id/table_header"
        android:layout_above="@+id/invoice_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/listSelected"
        android:id="@+id/invoice_summary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Shelf Qty"
            style="@style/SalesSummaryTextViews"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/shelf_si"
            style="@style/SalesSummaryTextViews" />
        <TextView
            android:text="Order Qty"
            style="@style/SalesSummaryTextViews"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/order_si"
            style="@style/SalesSummaryTextViews" />

        <TextView
            android:text="Free Qty"
            style="@style/SalesSummaryTextViews"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/free_si"
            style="@style/SalesSummaryTextViews"/>
        <TextView
            android:text="Invoiced Qty"
            style="@style/SalesSummaryTextViews" />
        <TextView
            android:id="@+id/inv_qty_si"
            style="@style/SalesSummaryTextViews"/>
        <TextView
            android:text="Sub Total"
            style="@style/SalesSummaryTextViews" />

        <TextView
            android:id="@+id/sub_tot_si"
            style="@style/SalesSummaryTextViews" />

        <TextView
            android:text="Discount"
            style="@style/SalesSummaryTextViews"/>
        <TextView
            android:id="@+id/discount_si"
            style="@style/SalesSummaryTextViews"/>
        <TextView
            android:text="Total"
            style="@style/SalesSummaryTextViews" />
        <TextView
            android:id="@+id/tot_si"
            style="@style/SalesSummaryTextViews"/>
        <!--<TextView-->

        <!--style="@style/SalesSummaryTextViews" />-->


        <Button
            android:id="@+id/next_si"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation_drawer"
        app:menu="@menu/activity_navigation_drawer_drawer" />
</android.support.v4.widget.DrawerLayout>