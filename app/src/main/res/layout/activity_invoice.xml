<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:openDrawer="start">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:id="@+id/principleSpinner"
                    style="@style/SalesSpinnerViews">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:id="@+id/subBrandSpinner"
                    style="@style/SalesSpinnerViews">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <android.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.widget.SearchView>
            </LinearLayout>
        </LinearLayout>
        <!--table header-->
        <TableLayout
            android:id="@+id/table_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_bar"
            android:background="@color/colorPrimary"
            android:textColor="@color/listSelectedText">

            <TableRow android:background="@drawable/backshadow"
                android:backgroundTint="@color/secondoryText"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/textPrimary">
                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1.1"
                    android:text="Code"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="4"
                    android:text="Product"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="0.9"
                    android:text="Batch No."
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1.5"
                    android:text="Expiry Date"
                    android:textAlignment="center"
                    android:visibility="gone" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="Unit Price" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="Stock"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="Shelf"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="Request"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="Order"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:text="Free"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:text="Disc%"
                    android:textAlignment="center" />

                <TextView
                    style="@style/SalesTableHeaderTextViews"
                    android:layout_weight="1"
                    android:text="Line Value"
                    android:textAlignment="center" />
            </TableRow>
        </TableLayout>

        <!--details-->

        <android.support.v7.widget.RecyclerView

            android:id="@+id/invoiceRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/invoice_summary"
            android:layout_below="@+id/table_header"
            android:paddingTop="10dp">

        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/invoice_summary"
            android:foregroundGravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/invoice_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:background="@color/listSelected"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp">

            <Button
                android:id="@+id/refresh_si"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1.6"
                android:text="Refresh" />

            <TextView
                style="@style/SalesSummaryTextViews"
                android:text="Shelf Qty"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/shelf_si"
                style="@style/SalesSummaryTextViews"
                android:layout_weight="0.8" />

            <TextView
                style="@style/SalesSummaryTextViews"
                android:text="Order Qty"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/order_si"
                style="@style/SalesSummaryTextViews"
                android:layout_weight="0.8" />

            <TextView
                style="@style/SalesSummaryTextViews"
                android:text="Free Qty"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/free_si"
                style="@style/SalesSummaryTextViews"
                android:layout_weight="0.8" />

            <TextView
                style="@style/SalesSummaryTextViews"
                android:text="Invoiced Qty" />

            <TextView
                android:id="@+id/inv_qty_si"
                style="@style/SalesSummaryTextViews"
                android:layout_weight="0.8" />

            <TextView
                style="@style/SalesSummaryTextViews"
                android:text="Sub Total" />

            <TextView
                android:id="@+id/sub_tot_si"
                style="@style/SalesSummaryTextViews" />

            <TextView
                style="@style/SalesSummaryTextViews"
                android:text="Discount" />

            <TextView
                android:id="@+id/discount_si"
                style="@style/SalesSummaryTextViews" />

            <TextView
                style="@style/SalesSummaryTextViews"
                android:text="Total" />

            <TextView
                android:id="@+id/tot_si"
                style="@style/SalesSummaryTextViews" />

            <Button
                android:id="@+id/next_si"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next" />
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation_drawer"
        app:menu="@menu/activity_navigation_drawer_drawer" />
</android.support.v4.widget.DrawerLayout>