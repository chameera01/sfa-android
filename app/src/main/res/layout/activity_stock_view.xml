<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/activity_stock_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="80dp"

        tools:context=".activities.StockView">


        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginBottom="36dp"
            android:id="@+id/btn_add"
            android:onClick="btnStockView"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout_stockview">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Principle"
                    android:id="@+id/textView2" />

                <Spinner
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_principle_stockview" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:id="@+id/textView3" />

                <Spinner
                    android:layout_width="249dp"
                    android:layout_height="65dp"
                    android:id="@+id/spinner_brand_stock_view"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp" />

                <SearchView
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_txt_stockview"
                    android:queryHint="Search" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout_stockview"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scrollView"
                    android:layout_alignEnd="@+id/scrollView">
                    <TextView
                        android:text="ItemCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"

                        android:paddingTop="10dp"
                        android:background="#92C94a"

                        android:layout_weight="1"/>
                    <TextView
                        android:text="Principle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:background="#92C94a"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:background="#92C94a"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="ItemCode"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:background="#92C94a"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="BatchNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:background="#92C94a"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="ExpiryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:layout_weight="1"
                        android:background="#92C94a"/>
                    <TextView
                        android:text="SellingPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="7"
                        android:paddingBottom="10dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:layout_weight="1"
                        android:background="#92C94a"/>
                    <TextView
                        android:text="RetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="8"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:layout_weight="1"
                        android:background="#92C94a"/>
                    <TextView
                        android:text="Quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="9"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:layout_weight="1"
                        android:background="#92C94a"/>
                    <TextView
                        android:text="LastUpdateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="10"
                        android:paddingBottom="10dp"

                        android:paddingTop="10dp"
                        android:layout_weight="1"
                        android:background="#92C94a"/>
                </LinearLayout>

                <ScrollView
                    android:layout_width="903dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView_stock"
                    android:layout_below="@+id/linearLayout_stockview"
                    android:layout_alignEnd="@+id/linearLayout_stockview"
                    android:layout_marginEnd="62dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/table_stockview"

                        android:layout_row="10"
                        android:layout_column="5"
                        android:layout_below="@+id/linearLayout_stockview"
                        android:layout_alignParentStart="true"

                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">


                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"

                            android:textSize="16sp"
                            android:background="#93f184"
                            android:layout_margin="1dp"
                            android:layout_marginLeft="2dp"
                            android:paddingRight="0dp"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal">


                            <EditText
                            android:text="CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:id="@+id/checkBox2"
                            android:layout_weight="1"  />
                            <EditText
                                android:text="CheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:id="@+id/checkBox3"
                                android:layout_weight="1"/>
                            <EditText
                                android:text="CheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:id="@+id/checkBox4"
                                android:layout_weight="1"/>
                        </TableRow>
                    </TableLayout>
                </ScrollView>
            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation_drawer"
        app:menu="@menu/activity_navigation_drawer_drawer" />



</android.support.v4.widget.DrawerLayout>