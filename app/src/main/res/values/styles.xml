<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">
            @color/colorAccent
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SalesSummaryTextViews" parent="android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/listSelected</item>
        <item name="android:textColor">@color/listSelectedText</item>
    </style>

    <style name="SalesSpinnerViews" parent="android:style/Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SalesRowTextView" parent="android:style/Widget.TextView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SalesRowEditText" parent="android:style/Widget.EditText">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="InvoicePaymentEditText" parent="android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:radius">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">5dp</item>
        
    </style>

    <style name="InvoicePaymentTextView" parent="android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SalesTableHeaderTextViews" parent="android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--add style by asanka-->
    <style name="radioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">#fff</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:saveEnabled">false</item>
        <!--item name="android:textColor">@drawable/option_text_color</item-->
        <item name="android:textSize">9sp</item>
    </style>
    <style name="tableRow" >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@drawable/cellborder</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#63676f</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_span">10</item>
    <item name="android:paddingLeft">40dp</item>
    <item name="android:paddingRight">80dp</item>



</style>
    <style name="tableStockView_row" >
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15sp</item>
    <item name="android:background">@drawable/cellborder</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#cedff5</item>
    <item name="android:layout_column">1</item>
    <item name="android:layout_weight">1</item>

    <item name="android:paddingLeft">30dp</item>
    <item name="android:paddingRight">30dp</item>

    </style>


    <style name="pending_customer_row" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/cellborder</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#646870</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_weight">1</item>

        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>

    </style>
    <style name="stock_view_row" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/cellborder</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#63676f</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_weight">1</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

    </style>
    <style name="pending_customer_odd_row" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/odd_row</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#62666e</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_weight">1</item>

        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>

    </style>
    <style name="stockview_odd_row" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/odd_row</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#e0e2e6</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_weight">1</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

    </style>

    <style name="popup_edittext" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>



    <style name="Divider">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ea9233</item>
    </style>

    <style name="Divider_invisible">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--end addtion-->

</resources>
